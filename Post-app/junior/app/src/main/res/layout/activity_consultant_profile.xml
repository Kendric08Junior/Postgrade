<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollConsultantProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22142B"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/llProfileContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="48dp">

        <!-- Logo and App Title -->
        <LinearLayout
            android:id="@+id/llLogoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo"
                android:contentDescription="App Logo"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvAppTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POSTGRADUATE RESEARCH SUPPORT MANAGEMENT"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:maxLines="2" />
        </LinearLayout>

        <!-- Profile Heading -->
        <TextView
            android:id="@+id/tvProfileHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Consultant Profile"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- First Name -->
        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBBBBB"
            android:layout_marginBottom="16dp" />

        <!-- Last Name -->
        <EditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBBBBB"
            android:layout_marginBottom="16dp" />

        <!-- Username -->
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBBBBB"
            android:layout_marginBottom="16dp" />

        <!-- Date of Birth -->
        <EditText
            android:id="@+id/etDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth (YYYY-MM-DD)"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBBBBB"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="24dp" />

        <!-- Email Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="example@email.com"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#BBBBBB" />

            <Button
                android:id="@+id/btnSaveEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_primary"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Password Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:background="@drawable/button_outline"
            android:textColor="#F65B70"
            android:layout_marginBottom="32dp" />

        <!-- Save Changes -->
        <Button
            android:id="@+id/btnSaveAllChanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:background="@drawable/button_primary"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>

