<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22142B"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo and header omitted for brevity -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Œ Consultant Feedback"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:gravity="start"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/tvNoFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No evaluations yet."
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <!-- Container for feedback -->
        <LinearLayout
            android:id="@+id/feedbackContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>