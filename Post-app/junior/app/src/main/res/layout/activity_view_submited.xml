<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22142B"
    android:padding="16dp"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- ðŸ”¼ Spacer for Status Bar -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- ðŸ”· App Logo and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo"
                android:layout_marginEnd="8dp"
                android:contentDescription="App Logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POSTGRADUATE RESEARCH SUPPORT MANAGEMENT"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp"
                android:maxLines="2" />
        </LinearLayout>

        <!-- ðŸ“„ Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Status for Submitted Research Papers"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- ðŸ“Œ Status Explanation -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â€¢ Awaiting payment â€“ payment not received for research paper evaluation.\n\nâ€¢ In progress â€“ research paper received and is in the queue for evaluation.\n\nâ€¢ Feedback available â€“ navigate to 'Consultant feedback'."
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <!-- ðŸ”„ Dynamic Submissions Area (populated in code) -->
        <!-- You can dynamically add cards/rows to this container -->
        <LinearLayout
            android:id="@+id/statusListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>
</ScrollView>
