<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22142B"
    android:fitsSystemWindows="true">


    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/AICHAT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Logo"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="POSTGRADUATE RESEARCH SUPPORT MANAGEMENT"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="end|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/notifications"
                    app:tint="#FFFFFF" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/messages"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:text="Welcome,"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/name"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/user"
                    app:tint="#FFFFFF" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/AIChat"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/search_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="How can I help you today?"
                    android:textColor="#555555"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/chatbot"
                    app:tint="#F65B70" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Student Dashboard"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:useDefaultMargins="true">


                <LinearLayout
                    style="@style/TileStyle"
                    android:id="@+id/btnQuotation"
                    android:onClick="onQuotationClick">
                    <ImageView
                        style="@style/TileIconStyle"
                        android:src="@drawable/quotation"
                        android:contentDescription="Quotation" />
                    <TextView
                        style="@style/TileTextStyle"
                        android:text="Request Quotation" />
                </LinearLayout>


                <LinearLayout
                    style="@style/TileStyle"
                    android:id="@+id/btnSubmitPaper"
                    android:onClick="onSubmitPaperClick">
                    <ImageView
                        style="@style/TileIconStyle"
                        android:src="@drawable/consultation"
                        android:contentDescription="Submit Paper" />
                    <TextView
                        style="@style/TileTextStyle"
                        android:text="Submit Paper For Evaluation" />
                </LinearLayout>


                <LinearLayout
                    style="@style/TileStyle"
                    android:id="@+id/btnStatus"
                    android:onClick="onViewStatusClick">
                    <ImageView
                        style="@style/TileIconStyle"
                        android:src="@drawable/documents"
                        android:contentDescription="View Status" />
                    <TextView
                        style="@style/TileTextStyle"
                        android:text="View Paper Status" />
                </LinearLayout>


                <LinearLayout
                    style="@style/TileStyle"
                    android:id="@+id/btnFeedback"
                    android:onClick="onFeedbackClick">
                    <ImageView
                        style="@style/TileIconStyle"
                        android:src="@drawable/feedback"
                        android:contentDescription="Feedback" />
                    <TextView
                        style="@style/TileTextStyle"
                        android:text="Consultant Feedback" />
                </LinearLayout>


                <LinearLayout
                    style="@style/TileStyle"
                    android:id="@+id/btnLogout"
                    android:onClick="onLogoutClick">
                    <ImageView
                        style="@style/TileIconStyle"
                        android:src="@drawable/logout"
                        android:contentDescription="Logout" />
                    <TextView
                        style="@style/TileTextStyle"
                        android:text="Log Out" />
                </LinearLayout>

            </GridLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/composeChatContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#CC000000"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />

</FrameLayout>

